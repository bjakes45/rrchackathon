<div class="row">
    <div class="col-sm-offset-3 col-sm-6">

        <% if flash[:notice] %>
          <div class="alert alert-warning alert-dismissible show" role="alert">
            <%= flash[:notice] %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        <% end %>

        <% if flash[:alert] %>
          <div class="alert alert-warning alert-dismissible show" role="alert">
            <%= flash[:alert] %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        <% end %>

    </div>
</div>