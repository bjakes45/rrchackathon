<div class="container">
  <h2>
    All Rental Data
    <%= link_to "View Map", rentals_map_path, class: "btn btn-dark" %>
  </h2>
  <table class="table text-center">
    <thead>
      <tr>
        
        <th class="hide">ID</th>
        <th class="hide">Link to Post</th>
        <th class="hide">Date</th>
        
        <th>Address</th>
        <th>Price</th>
        <th>Bdrms</th>
